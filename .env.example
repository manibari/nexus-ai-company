# ===========================================
# Nexus AI Company - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------
# LLM Provider API Keys
# -----------------------------
# Primary provider (Claude - recommended for AI agents)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative providers
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------
# LLM Configuration
# -----------------------------
# Options: claude, gemini, openai (claude is recommended)
LLM_PROVIDER=claude

# Model names (optional, uses defaults if not set)
# GEMINI_MODEL=gemini-1.5-pro
# CLAUDE_MODEL=claude-sonnet-4-5-20250929
# OPENAI_MODEL=gpt-4o

# -----------------------------
# Database
# -----------------------------
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql+asyncpg://nexus:nexus_dev@localhost:5432/nexus
# SQLite fallback (for quick local testing without Docker)
# DATABASE_URL=sqlite+aiosqlite:///./data/nexus.db

# -----------------------------
# Redis
# -----------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------
# Backend Server
# -----------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true

# -----------------------------
# Frontend
# -----------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# -----------------------------
# Security (for production)
# -----------------------------
# SECRET_KEY=generate_a_secure_random_string
# ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------
# Budget & Limits
# -----------------------------
# Daily token budget (USD)
DAILY_BUDGET_USD=10.00

# Max tokens per request
MAX_TOKENS_PER_REQUEST=4096

# -----------------------------
# Agent Configuration
# -----------------------------
# Agent think loop interval (seconds)
AGENT_LOOP_INTERVAL=5

# Message bus timeout (seconds)
MESSAGE_TIMEOUT=30
